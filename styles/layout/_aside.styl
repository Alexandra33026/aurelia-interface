
  .ai-aside
    overflow hidden
    flex           : 1 0 auto
    position       : relative
    flex-direction : column
    min-max-height(100%)
    flex-container()




    &.ai-aside-nav
      background-color: $shades.white
      order: -1
      width : 0px
      height: 100%
      transition: all 30ms, cubic-bezier(0,.74,0,.99)
      z-index 1000

      .aside-header
        flex-container()
        flex-direction column
        flex 1 0 auto
        height: 0px
        align-items: center
        justify-content: center
        margin: 0
        h1
          margin inherit
        &.bar-xs
          flex:  0 0 $nav-bar-height
          min-max-height($nav-bar-height-xs)

        &.bar-sm
          flex:  0 0 $nav-bar-height
          min-max-height($nav-bar-height-sm)

        &.bar-md
          flex:  0 0 $nav-bar-height
          min-max-height($nav-bar-height-md)

        &.bar-lg
          flex:  0 0 $nav-bar-height
          min-max-height($nav-bar-height-lg)

        &.bar-xl
          flex: 0 0 $nav-bar-height
          min-max-height($nav-bar-height-xl)

      .aside-container
        width:  100%
        height: 100%
        position relative

      .aside-toggle
        height : 64px
        width  : 64px
        display: block

      &.aside-fixed
        position: fixed
        top: 0

      &.aside-right
        right     : 0
        order     : 2
        box-shadow: -2px 0 4px rgba(0,0,0, 0.3)

      &.aside-left
        left      : 0
        order     : -1
        box-shadow: 2px 0 4px rgba(0,0,0, 0.3)
        border-bottom-right-radius 300%
        border-top-right-radius 300%

      &.aside-open
        width     : $nav-aside-width

        &.aside-left
          transition: all 200ms, cubic-bezier(0,.74,0,.99)
          border-top-right-radius 0
          border-bottom-right-radius 0



.ai-nav-list
  margin 0
  padding 0
  .list-header
    margin 0
    padding 0
    font-size: 1.2em
    line-height: 48px
    padding-left: 24px
    font-weight: bold
    color: $grey.lighten-1

  .list-item
    margin 0
    padding 0
    font-size: 1.2em
    line-height: 48px
    flex-container()

    i
      padding-left: 24px
    a
      flex 1 0 auto
      padding-left: 24px

      &.active,
      &:active,
      &:hover
        background-color: $grey.lighten-4








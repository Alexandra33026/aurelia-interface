
  .ai-aside
    flex           : 1 0 auto
    position       : relative
    flex-direction : column
    min-max-height(100%)
    flex-container()


    &.ai-aside-nav
      background-color: $shades.white
      order: -1
      width : 0px
      transition: all 30ms, cubic-bezier(0,.74,0,.99)
      z-index 1000


      .aside-container
        width:  100%
        height: 100%
        position relative

      .aside-toggle
        height : 64px
        width  : 64px
        display: block

      &.aside-fixed
        position: fixed
        top: 0

      &.aside-right
        right     : 0
        order     : 2
        box-shadow: -2px 0 4px rgba(0,0,0, 0.3)

      &.aside-left
        left      : 0
        order     : -1
        box-shadow: 2px 0 4px rgba(0,0,0, 0.3)
        border-bottom-right-radius 300%
        border-top-right-radius 300%

      &.aside-open
        width     : $nav-aside-width

        &.aside-left
          transition: all 200ms, cubic-bezier(0,.74,0,.99)
          border-top-right-radius 0
          border-bottom-right-radius 0

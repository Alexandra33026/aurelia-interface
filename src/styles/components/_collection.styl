$collection = {
    default: {
        shadow : 0 2px 4px rgba(0,0,0,0.2),
        padding: 0px 16px,
        bg     : white,
        heading: {
            height: 48px,
            color : $grey.base
        }
    }
}
$c-item = {
    default:{bg     : white
            ,shadow : 0 2px 4px rgba(0,0,0,0.2)
            ,padding: 0px 16px
            ,transition: all 300ms cubic-bezier(0,0.79,0,0.83)
            ,header:{bg         : white
                    ,height     : 48px
                    ,border     : 1px solid $grey.lighten-2
                    ,font-size  : 12px
                    }

            ,summary:{font-size: 12px
                     ,font-weight: 300}

            ,icon:{width  : 48px}

            ,title:{width : 200px
                   ,color : $grey.base}

            ,actions:{width    : 200px
                     ,position : absolute
                     ,color    : $grey.lighten-1
                     ,hover    : {color: $grey.base}
                     }
            ,body:{padding:20px 16px 8px 16px
                  }
            }
}

.ai-collection,
.collection-heading,
.collection-item,
.collection-item-header,
.collection-item-actions,
.collection-item-icon,
.collection-item-body,
.collection-item-summary,
.collection-item-footer
    f-container()

.ai-collection,
.collection-item,
.collection-heading,
.collection-item-summary,
.collection-item-body
    f-(1 0 auto)

.ai-collection,
.collection-item,
.collection-item-body
    f-direction(column)

.collection-heading,
.collection-item-icon,
.collection-item-header,
.collection-item-actions,
.collection-item-footer
    f-direction(row)


.ai-collection
    list-style: none
    .collection-heading
        line-height : $collection.default.heading.height
        max-height  : $collection.default.heading.height
        padding     : $collection.default.padding
        color       : $collection.default.heading.color
        font-weight : 500


    .collection-item-header
        f-(0 0 $c-item.default.header.height)
        max-height        : $c-item.default.header.height
        line-height       : $c-item.default.header.height
        background        : $c-item.default.bg
        background-color  : $c-item.default.bg
        position          : relative
        cursor            : pointer
        border-bottom     : $c-item.default.header.border
        font-weight       : $c-item.default.header.font-weight
        font-sze          : $c-item.default.header.font-size

    .collection-item-icon
        f-(0 0 $c-item.default.icon.width)
        f-align(center)
        f-justify(center)
        max-width    : $c-item.default.icon.width

    .collection-item-title
        f-align(center)
        f-(0 0 $c-item.default.title.width)
        color     : $c-item.default.title.color
        max-width : $c-item.default.title.width

     .collection-item-summary
         font-weight : $c-item.default.summary.font-weight
         font-size : $c-item.default.summary.font-size
         line-height : $c-item.default.header.height

     .collection-item-actions
         f-(0 0  $c-item.default.actions.width)
         f-justify(flex-end)
         f-align(center)
         line-height    : $c-item.default.header.height
         width          : $c-item.default.actions.width
         position       : $c-item.default.actions.position
         color          : $c-item.default.actions.color
         top            : 0
         right          : 0
         display        : none
         &.show-actions
             f-container()
         & > i
             margin         : 0 15px
             &:hover
                 color: $grey.darken-4
         &:hover,
         &:active,
         &:focus,
         &.active
             f-container()

    .collection-item-body
        background : $c-item.default.bg
        position   : relative
        overflow   : hidden
        max-height : 0px
        opacity    : 0
        visibility : 0
        transition : height 400ms cubic-bezier(0,0.89,0,0.93), opacity 300ms cubic-bezier(0,0.89,0,0.93)


    .collection-item-footer
        height     : $c-item.default.header.height
        background : $c-item.default.bg


    .collection-item-header:hover
        .collection-item-actions
            f-container()

    .collection-item
        box-shadow : $c-item.default.shadow
        transition : $c-item.default.transition

        &.item-show-actions
            .collection-item-actions
                f-container()

        &.collection-item-expanded
            margin: 20px -50px
            .collection-item-actions
                f-container()
            .collection-item-body
                padding   : $c-item.default.body.padding
                display   : flex
                opacity   : 1
                visibility: visible
                max-height: 600px

    &.collection-show-actions
        .collection-item-actions
            f-container()

